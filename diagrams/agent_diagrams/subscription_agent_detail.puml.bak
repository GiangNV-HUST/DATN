!pragma charset UTF-8
@startuml subscription_agent_detail
!theme plain
skinparam backgroundColor #FFFFFF
skinparam shadowing false
skinparam defaultFontName "Segoe UI"

title Subscription Agent - Agent quản lý đăng ký theo dõi

skinparam rectangle {
    BackgroundColor<<user>> #E8E8FF
    BackgroundColor<<router>> #FFECB3
    BackgroundColor<<agent>> #FFD6D6
    BackgroundColor<<tool>> #D4F1D4
    BackgroundColor<<output>> #F0E6FF
    BorderColor #333333
    FontSize 11
}

rectangle "User's query" as query <<user>>
rectangle "Root_agent" as root <<router>>
rectangle "subscription_agent" as subscription <<agent>>
rectangle "Output" as output <<output>>

rectangle "create_subscription" as create <<tool>>
rectangle "get_user_subscriptions" as get <<tool>>
rectangle "delete_subscription" as delete <<tool>>

query --> root
root --> subscription : "routing"

subscription -.-> create
subscription -.-> get
subscription -.-> delete

create --> output
get --> output
delete --> output

subscription --> output

@enduml
