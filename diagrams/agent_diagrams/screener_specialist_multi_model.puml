!pragma charset UTF-8
@startuml screener_specialist_multi_model
!theme plain
skinparam backgroundColor #FFFFFF
skinparam shadowing false
skinparam defaultFontName "Times New Roman"

skinparam rectangle {
    BackgroundColor<<user>> #E8E8FF
    BackgroundColor<<router>> #FFECB3
    BackgroundColor<<agent>> #FFD6D6
    BackgroundColor<<model>> #E1F5FE
    BackgroundColor<<mcp>> #D4E6F1
    BackgroundColor<<tool>> #D4F1D4
    BackgroundColor<<output>> #F0E6FF
    BorderColor #333333
    FontSize 11
}

rectangle "User's query" as query <<user>>
rectangle "Root_agent" as root <<router>>
rectangle "screener_specialist" as screener <<agent>>

rectangle "Task Classifier" as selector <<router>>

rectangle "Claude Sonnet 4.5" as claude_sonnet <<model>>
rectangle "Gemini 2.0 Flash" as gemini_flash <<model>>

rectangle "MCP Server" as mcp <<mcp>>
rectangle "Output" as output <<output>>

rectangle "screen_stocks" as screen <<tool>>
rectangle "get_columns" as columns <<tool>>
rectangle "filter_stocks" as filter <<tool>>
rectangle "rank_stocks\n_by_score" as rank <<tool>>

query --> root
root --> screener : "routing"

screener --> selector : "Phân loại nhiệm vụ"

selector --> claude_sonnet : "SCREENING\n(Nhiệm vụ chính)"
selector --> gemini_flash : "DATA_QUERY\n(Truy vấn dữ liệu)"

claude_sonnet --> mcp : "Gọi MCP tools"
gemini_flash --> mcp : "Gọi MCP tools"

mcp -.-> screen : "Claude Sonnet 4.5\n(Sàng lọc cổ phiếu)"
mcp -.-> filter : "Claude Sonnet 4.5\n(Lọc theo điều kiện)"
mcp -.-> rank : "Claude Sonnet 4.5\n(Xếp hạng)"
mcp -.-> columns : "Gemini Flash\n(Lấy cột dữ liệu)"

screen --> output
columns --> output
filter --> output
rank --> output

screener --> output

note right of claude_sonnet
  Claude Sonnet 4.5 - SCREENING Task
  - Sàng lọc cổ phiếu
  - Lọc theo điều kiện phức tạp
  - Xếp hạng theo điểm số
  Best reasoning for screening
end note

note right of gemini_flash
  Gemini 2.0 Flash - DATA_QUERY
  - Lấy thông tin cột
  Ultra fast data retrieval
end note

@enduml
