!pragma charset UTF-8
@startuml analysis_agent_detail
!theme plain
skinparam backgroundColor #FFFFFF
skinparam shadowing false
skinparam defaultFontName "Times New Roman"


skinparam rectangle {
    BackgroundColor<<user>> #E8E8FF
    BackgroundColor<<router>> #FFECB3
    BackgroundColor<<agent>> #FFD6D6
    BackgroundColor<<mcp>> #E1F5FE
    BackgroundColor<<tool>> #D4F1D4
    BackgroundColor<<output>> #F0E6FF
    BorderColor #333333
    FontSize 11
}

rectangle "User's query" as query <<user>>
rectangle "Root_agent" as root <<router>>
rectangle "analysis_agent" as analysis <<agent>>
rectangle "MCP Server" as mcp <<mcp>>
rectangle "Output" as output <<output>>

rectangle "get_stock_data" as stock_data <<tool>>
rectangle "get_stock_price\n_prediction" as prediction <<tool>>
rectangle "get_financial_data" as financial <<tool>>
rectangle "generate_chart\n_from_data" as chart <<tool>>
rectangle "gemini_search\n_and_summarize" as gemini <<tool>>

query --> root
root --> analysis : "routing"

analysis --> mcp : "Gá»i MCP tools"

mcp -.-> stock_data
mcp -.-> prediction
mcp -.-> financial
mcp -.-> chart
mcp -.-> gemini

stock_data --> output
prediction --> output
financial --> output
chart --> output
gemini --> output

analysis --> output

@enduml
