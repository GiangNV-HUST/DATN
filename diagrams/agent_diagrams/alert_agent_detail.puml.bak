!pragma charset UTF-8
@startuml alert_agent_detail
!theme plain
skinparam backgroundColor #FFFFFF
skinparam shadowing false
skinparam defaultFontName "Segoe UI"

title Alert Agent - Agent quản lý cảnh báo

skinparam rectangle {
    BackgroundColor<<user>> #E8E8FF
    BackgroundColor<<router>> #FFECB3
    BackgroundColor<<agent>> #FFD6D6
    BackgroundColor<<tool>> #D4F1D4
    BackgroundColor<<output>> #F0E6FF
    BorderColor #333333
    FontSize 11
}

rectangle "User's query" as query <<user>>
rectangle "Root_agent" as root <<router>>
rectangle "alert_agent" as alert <<agent>>
rectangle "Output" as output <<output>>

rectangle "create_alert" as create <<tool>>
rectangle "get_user_alerts" as get <<tool>>
rectangle "delete_alert" as delete <<tool>>

query --> root
root --> alert : "routing"

alert -.-> create
alert -.-> get
alert -.-> delete

create --> output
get --> output
delete --> output

alert --> output

@enduml
