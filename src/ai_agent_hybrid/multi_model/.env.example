# Multi-Model Configuration
# Copy this to .env and fill in your API keys

# ============================================
# Google Gemini API
# ============================================
# Get key from: https://aistudio.google.com/app/apikey
GEMINI_API_KEY=your_gemini_api_key_here

# ============================================
# Anthropic Claude API
# ============================================
# Get key from: https://console.anthropic.com/
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# ============================================
# OpenAI GPT API
# ============================================
# Get key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=your_openai_api_key_here

# ============================================
# Multi-Model Settings
# ============================================

# Default fallback model khi classification uncertain
DEFAULT_FALLBACK_MODEL=gemini-pro

# Cost alert threshold (USD)
# System sẽ cảnh báo khi tổng chi phí vượt ngưỡng này
COST_ALERT_THRESHOLD=10.0

# Model preferences (optional override)
# Uncomment to override default task-model mapping
# TASK_DATA_QUERY_MODEL=gemini-flash
# TASK_SCREENING_MODEL=gemini-pro
# TASK_ANALYSIS_MODEL=claude-sonnet
# TASK_ADVISORY_MODEL=gpt-4o
# TASK_DISCOVERY_MODEL=claude-sonnet
# TASK_CRUD_MODEL=gemini-flash

# ============================================
# Performance Settings
# ============================================

# Enable caching for model responses
ENABLE_MODEL_CACHING=true

# Cache TTL (seconds)
MODEL_CACHE_TTL=300

# Max retries for failed requests
MAX_MODEL_RETRIES=3

# Timeout for model requests (seconds)
MODEL_REQUEST_TIMEOUT=60

# ============================================
# Monitoring & Logging
# ============================================

# Enable usage tracking
ENABLE_USAGE_TRACKING=true

# Log level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# Export usage report path
USAGE_REPORT_PATH=./reports/usage_report.json

# Export interval (minutes) - auto export every N minutes
USAGE_REPORT_EXPORT_INTERVAL=60