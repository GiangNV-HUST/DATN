# Google API Key (Required)
GOOGLE_API_KEY=your_google_api_key_here

# Database Configuration (from ai_agent_mcp)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=stock_db
DB_USER=postgres
DB_PASSWORD=your_password_here

# Optional: Discord Bot
DISCORD_TOKEN=your_discord_token_here

# Optional: Anthropic API (for future use)
ANTHROPIC_API_KEY=your_anthropic_key_here

# MCP Server Path (relative to project root)
MCP_SERVER_SCRIPT=../ai_agent_mcp/mcp_server/server.py

# Cache Settings
CACHE_TTL=300  # seconds (5 minutes default)
CACHE_ENABLED=true

# Circuit Breaker Settings
CIRCUIT_BREAKER_MAX_FAILURES=5
CIRCUIT_BREAKER_TIMEOUT=30  # seconds

# Routing Settings
AI_ROUTER_CACHE_ENABLED=true
AI_ROUTER_TEMPERATURE=0.3  # Low for consistent routing
